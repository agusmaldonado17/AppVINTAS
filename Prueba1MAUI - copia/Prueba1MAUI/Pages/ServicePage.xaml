<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Prueba1MAUI.Pages.ServicePage"
   BackgroundImageSource="imagen_fondo.png"
    Padding="{StaticResource PagePadding}">

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">

      <Image Source="logo_vintas.png"
           HeightRequest="160"
           HorizontalOptions="Center"
           Margin="0,40,0,10"
           Grid.Row="0" />

    <!-- 2) Contenido central -->
    <VerticalStackLayout
        Grid.Row="1"
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="Center"
        Spacing="20"
        WidthRequest="300">

      <!-- Título de bienvenida -->
      <Label Text="Bienvenido a Vintas!"
             Style="{StaticResource PageTitleStyle}" />

      <!-- Tarjeta con descripción -->
      <Frame
          BackgroundColor="White"
          CornerRadius="16"
          HasShadow="True"
          Padding="15">
        <Label Text="Descubre, compra y vende ropa vintage y de segunda mano con total confianza. Publica tus prendas en minutos, conecta directamente con la comunidad y encuentra piezas únicas a precios accesibles. ¡Sé parte de la moda sostenible y dale una segunda vida a tu estilo!"
               FontFamily="Montserrat"
               FontSize="16"
               LineHeight="2"
               TextColor="{StaticResource VioletaFuerte}"
               HorizontalTextAlignment="Center"/>
      </Frame>

    </VerticalStackLayout>

    <!-- 3) Espacio al pie -->
    <BoxView Grid.Row="2"
             Color="Transparent"
             HeightRequest="20"/>

  </Grid>
</ContentPage>
